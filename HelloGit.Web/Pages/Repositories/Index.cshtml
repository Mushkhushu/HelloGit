@page
@model HelloGit.Web.Pages.Repositories.IndexModel

<h1>Repositories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Stars</th>
            <th>Open Issues</th>
            <th>Contributors</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var repo in Model.Repositories)
        {
            <tr>
                <td><a asp-page="./Details" asp-route-id="@repo.Id">@repo.FullName</a></td>
                <td>@repo.Stars</td>
                <td>@repo.OpenIssuesCount</td>
                <td>@repo.ContributorsCount</td>
            </tr>
        }
    </tbody>
</table>